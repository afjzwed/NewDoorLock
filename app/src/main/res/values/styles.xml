<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">loading…</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:background">#aaffffff</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@drawable/mydialog</item>
        <item name="android:width">400dp</item>
        <item name="android:height">140dp</item>
    </style>

    <style
        name="selectorDialog"
        parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/dissmissdialog</item><!--背景透明-->
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Text_TitleBar_Style">
        <item name="android:paddingTop">10dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

</resources>
